# EditorConfig for CLARITY Pulse V2
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.swift]
indent_size = 4
max_line_length = 120

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{pbxproj,xcscheme}]
indent_style = tab

[Makefile]
indent_style = tab

[Package.swift]
indent_size = 4

[*.plist]
indent_style = tab